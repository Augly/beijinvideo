/* pages/index/index.wxss */

page {
  background-color: rgba(0, 0, 0, 1);
}

.aps {
  width: 100%;
  height: 100rpx;
  background-color: red;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  z-index: 10;
}

.apsTitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  line-height: 100rpx;
}

.apsSure {
  width: 150rpx;
  height: 60rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 1);
  background-color: red;
  border-radius: 70rpx;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
}

.hotType {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 0rpx 0rpx 20rpx;
  /* margin-top: 50rpx; */
}

.hotTitle {
  font-size: 50rpx;
  color: rgba(255, 255, 255, 1);
}

.hotScroll {
  position: relative;
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.hotScroll scroll-view {
  /* width: 100%; */
  white-space: nowrap;
}

.hotyItem {
  width: 400rpx;
  height: 200rpx;
  background-color: red;
  display: inline-block;
  margin-right: 20rpx;
}

.videoArr {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  margin-top: 50rpx;
  overflow: hidden;
}

.pageScroll {
  box-sizing: border-box;
  padding-top: 150rpx;
}

.videoItem {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.videoItem video {
  width: 100%;
  height: 600rpx;
  background-color: red;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.videoItem .myposter {
  width: 100%;
  height: 600rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  position: relative;
  box-sizing: border-box;
}

.videoItem image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.videoTitle {
  position: absolute;
  left: 20rpx;
  width: 600rpx;
  font-size: 30rpx;
  top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgba(255, 255, 255, 1);
}

.icon-bofang {
  color: rgba(255, 255, 255, 1);
  font-size: 60rpx;
  line-height: 60rpx;
  z-index: 5;
  position: absolute;
  display: block;
  left: 50%;
  margin-left: -30rpx;
  top: 50%;
  margin-top: -30rpx;
}

.tominApp {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 50%;
  right: 20rpx;
  bottom: 50rpx;
}

.time {
  position: absolute;
  right: 45rpx;
  bottom: 15rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
}

.videoItem .videoRes {
  width: 100%;
  height: 100rpx;
  background-color: yellow;
}
