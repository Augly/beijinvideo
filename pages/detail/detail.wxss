/* pages/index/index.wxss */

page {
  background-color: #0b0718;
}

.mywrap {
  position: fixed;
  top: 100rpx;
  bottom: 0rpx;
  width: 100%;
  z-index: -1;
  background-color: #0b0718;
}

.videoArr {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 15rpx 20rpx 0rpx 20rpx;
  margin-top: 0rpx;
  overflow: hidden;
}

.pageScroll {
  box-sizing: border-box;
  padding-bottom: 222rpx;
}

.headTop {
  width: 100%;
  height: 252rpx;
  background-size: 100% 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 50rpx;
  font-weight: bold;
  overflow: hidden;
}

.ph {
  width: 66rpx;
  height: 64rpx;
  position: absolute;
  top: 0;
  left: 22rpx;
  background-size: 100% 100%;
  font-size: 38rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  text-indent: -10rpx;
  line-height: 45rpx;
  font-weight: bold;
}

.headTopMain {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  overflow: hidden;
  font-size: 44rpx;
  line-height: 44rpx;
  color: rgba(255, 255, 255, 1);
  font-weight: bold;
}

.headBottom {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  bottom:28rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  left: 0;
  font-weight: normal;
}

.nodata {
  height: 200rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
}
