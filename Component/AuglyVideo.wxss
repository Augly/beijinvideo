/* Component/AuglyVideo.wxss */
.videoItem {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.videoItem video {
  width: 100%;
  height: 400rpx;
  background-color: red;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.videoItem .myposter {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  position: relative;
  box-sizing: border-box;
}

.videoItem image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.videoTitle {
  position: absolute;
  left: 20rpx;
  width: 400rpx;
  font-size: 30rpx;
  top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgba(255, 255, 255, 1);
}

.icon-bofang {
  color: rgba(255, 255, 255, 1);
  font-size: 60rpx;
  line-height: 60rpx;
  z-index: 5;
  position: absolute;
  display: block;
  left: 50%;
  margin-left: -30rpx;
  top: 50%;
  margin-top: -30rpx;
}

.tominApp {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 50%;
  right: 20rpx;
  bottom: 50rpx;
}

.time {
  position: absolute;
  right: 45rpx;
  bottom: 15rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
}

.videoItem .videoRes {
  width: 100%;
  height: 100rpx;
  background-color:darkslateblue;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}
.playnum{
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
}
.icon-zhuanfa{
  color: rgba(255, 255, 255, 1);
  font-size: 40rpx;
}